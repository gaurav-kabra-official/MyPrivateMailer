<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="?attr/backgroundcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend's id"
            android:layout_marginLeft="10dp"
            android:textColor="?attr/textcolor"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="69dp" />
        <EditText
            android:id="@+id/to2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:inputType="textEmailAddress"
            android:hint="Address..."
            android:textColor="?attr/textcolor"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="57dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sub"
            android:layout_marginLeft="10dp"
            android:textColor="?attr/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="69dp" />
        <EditText
            android:id="@+id/sub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="Crux..."
            android:layout_marginLeft="50dp"
            android:textColor="?attr/textcolor"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="57dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:layout_marginLeft="10dp"
            android:textColor="?attr/textcolor"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="69dp" />
        <EditText
            android:id="@+id/msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="?attr/textcolor"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:inputType="textPersonName"
            android:hint="Detailed Message..."
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="57dp" />

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="@drawable/bg_anim"
        android:src="@drawable/bg_anim"></pl.droidsonroids.gif.GifImageView>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="257dp"
        android:layout_height="234dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="44dp"
        android:onClick="sendit"
        android:textColor="?attr/textcolor"
        app:srcCompat="@drawable/sendicon" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="176dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:text="Night Mood"
        android:textColor="?attr/textcolor" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Developer : Gaurav Kabra | +91-8502806878 | gauravkabra.official@gmail.com" />
</LinearLayout>
</ScrollView>